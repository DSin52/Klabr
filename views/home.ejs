
<!DOCTYPE html>
<html>
  <head>
    <title>Klabr</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

  </head>
  <body>
  <!-- NavBar Object -->
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"></button>
      <a class="navbar-brand" id="title" href="http://localhost:3000">Klabr</a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <form class="navbar-form navbar-right" id="login" method="POST" action="/main">
        <div class="form-group">
          <input type="email" class="form-control" name="Email" placeholder="Email" id="user">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="Password" placeholder="Password" id="pass">
        </div>
        <button type="submit" class="btn btn-primary" id="loginButton">Log In</button>
        <!-- <button type="submit" class="btn btn-info" data-toggle="modal" data-target="#forgotModal" id="forgotButton">Forgot Password</button> -->
        <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#createModal" id="createButton">Create Account</button>
      </form>
    </div>
  </nav>
  <!-- End NavBar Object -->

  <!-- Forgot Modal -->
  <div class="modal fade" id="forgotModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Forgot Password</h4>
        </div>
        <div class="modal-body" id="modal-forgot">
          <p id="forgot-text">Please Enter email address to reset your password</p>
          <form class="navbar-form" id="forgot">
            <div class="form-group">
              <input type="email" class="form-control" placeholder="Email" id="forgotEmailAddress">
            </div>
            <button type="submit" class="btn btn-primary" id="forgotEmail">Send Email</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!-- End Forgot Modal -->

  <!-- Create Modal -->
  <div class="modal fade" id="createModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Enter Account Information</h4>
        </div>
        <div class="modal-body" id="modal-create">
          <form class="form-horizontal" id="create">
            <div class="form-group">
              <label for="createEmailAddress" class="col-lg-3 control-label">Email Address:</label>
              <div class="col-lg-8">
                <input type="email" class="form-control" name="Email" placeholder="Enter Email" id="createEmailAddress">
              </div>
            </div>
            <div class="form-group">
              <label for="verifyEmailAddress" class="col-lg-3 control-label">Re-Enter Email:</label>
              <div class="col-lg-8"> 
                <input type="email" class="form-control" placeholder="Re-Enter Email" id="verifyEmailAddress">
              </div>
            </div>
            <div class="form-group">
              <label for="accountPassword" class="col-lg-3 control-label">Password:</label>
              <div class="col-lg-8">
                <input type="password" class="form-control" name="Password" placeholder="Enter Password" id="createPassword">
              </div>
            </div>
            <div class="form-group">
              <label for="verifyAccountPassword" class="col-lg-3 control-label">Password:</label>
              <div class="col-lg-8">
                <input type="password" class="form-control" placeholder="Re-Enter Password" id="verifyPassword">
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success" id="createAccountButton">Create Account</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>
  <!-- End Create Modal -->
  
  <!-- Script References -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/javascripts/home.js"></script>
  <!-- End Script References -->

  </body>
</html>